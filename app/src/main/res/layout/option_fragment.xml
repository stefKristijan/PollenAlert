<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/optionFr_btnLogIn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/btnLogInText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/optionFr_btnSignUp"
        app:layout_constraintRight_toLeftOf="@+id/view2"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@+id/optionFr_tvWelcomeH2"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />
    <Button
        android:id="@+id/optionFr_btnSignUp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/btnSignUpText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/optionFr_btnCreateAcc"
        app:layout_constraintTop_toBottomOf="@+id/optionFr_btnLogIn"
        app:layout_constraintRight_toLeftOf="@+id/optionFr_ivSignUpInfo"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />
    <Button
        android:id="@+id/optionFr_btnCreateAcc"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/btnCreateAccText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/optionFr_btnSignUp"
        app:layout_constraintRight_toLeftOf="@+id/optionFr_ivCreateAccInfo"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <ImageView
        android:id="@+id/optionFr_ivSignUpInfo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/optionFr_btnSignUp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/optionFr_btnSignUp"
        app:srcCompat="@android:drawable/ic_menu_info_details"
        android:layout_marginEnd="16dp" />

    <ImageView
        android:id="@+id/optionFr_ivCreateAccInfo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/optionFr_btnCreateAcc"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/optionFr_btnCreateAcc"
        app:srcCompat="@android:drawable/ic_menu_info_details"
        app:layout_constraintVertical_bias="0.569"
        android:layout_marginEnd="16dp" />

    <Space
        android:id="@+id/view2"
        class="android.support.v4.widget.Space"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/optionFr_btnLogIn"
        android:layout_marginBottom="0dp"
        app:layout_constraintTop_toTopOf="@+id/optionFr_btnLogIn"
        android:layout_marginTop="0dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/optionFr_tvWelcomeH2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="16dp"
        android:text="@string/tvWelcomeH2"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/optionFr_btnLogIn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>